{
	"name": "client",
	"description": "Web client using Sveltekit, Routify, SMUI and WindiCSS for theming, with support of GraphQL through URQL.",
	"version": "0.0.0",
	"type": "module",
	"private": true,
	"scripts": {
		"dev": "npm-run-all -p gql:watch dev:no-gql",
		"dev:no-gql": "svelte-kit dev --port 5000",
		"build": "svelte-kit build",
		"preview": "svelte-kit preview --port 5000",
		"validate": "npm-run-all -p validate:*",
		"validate:svelte": "svelte-check --diagnostic-sources \"js,ts,svelte\"",
		"validate:ts": "tsc --noEmit",
		"lint": "npm-run-all -p lint:*",
		"lint:src": "eslint \"src/**/*.{t,j}s\"",
		"lint:css": "stylelint \"src/**/*.{css,svelte,html}\"",
		"format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. .",
		"smui-theme": "npm-run-all -p smui-theme:*",
		"smui-theme:light": "smui-theme compile static/theme/smui.css -i src/theme/light",
		"smui-theme:dark": "smui-theme compile static/theme/smui-dark.css -i src/theme/dark",
		"gql": "graphql-codegen --config ../.graphqlrc.js --project client",
		"gql:watch": "npm run gql -- --watch",
		"prepare": "npm run smui-theme"
	},
	"dependencies": {
		"@urql/svelte": "^1.3.3",
		"graphql": "^16.3.0",
		"graphql-ws": "^5.5.5",
		"minimum-delayer": "^0.2.1",
		"workbox-precaching": "^6.4.2",
		"workbox-routing": "^6.4.2",
		"workbox-strategies": "^6.4.2",
		"workbox-window": "^6.4.2"
	},
	"devDependencies": {
		"@graphql-codegen/cli": "^2.6.1",
		"@graphql-codegen/typed-document-node": "^2.2.3",
		"@graphql-codegen/typescript": "^2.4.3",
		"@graphql-codegen/typescript-operations": "^2.3.0",
		"@material/theme": "^13.0.0",
		"@material/typography": "^13.0.0",
		"@mdi/js": "^6.5.95",
		"@roxi/routify": "^3.0.0-next.82",
		"@sveltejs/adapter-netlify": "^1.0.0-next.44",
		"@sveltejs/kit": "^1.0.0-next.272",
		"@typescript-eslint/eslint-plugin": "^5.11.0",
		"@typescript-eslint/parser": "^5.11.0",
		"@v-ed/tsconfig": "0.1.2",
		"dotenv": "^16.0.0",
		"eslint": "^8.8.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-svelte3": "^3.4.0",
		"prettier": "~2.5.1",
		"prettier-plugin-svelte": "^2.6.0",
		"smui-theme": "^5.0.0",
		"svelte": "^3.46.4",
		"svelte-check": "^2.4.3",
		"svelte-material-ui": "^6.0.0-beta.13",
		"svelte-preprocess": "^4.10.3",
		"tslib": "^2.3.1",
		"typescript": "^4.5.5",
		"urql": "^2.1.3",
		"vite-tsconfig-paths": "^3.4.0"
	}
}
